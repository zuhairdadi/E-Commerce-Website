<div class="container-fluid px-4">
	<h2 class="mt-4 text-center text-uppercase" style="letter-spacing: 4px">Add New Product</h2>
</div>
<div class="row">
	
	<div class="col-md-2"></div>
	<div class="col-md-8">
		<form method="post" enctype="multipart/form-data" >
			<input type="text" name="Product_name" placeholder="Enter Product Name" class="form-control my-3" />
			<input type="text" name="Product_price" placeholder="Enter Product Price" class="form-control my-3" />
			<input type="text" name="Product_description" placeholder="Enter Product Decription" class="form-control my-3" />
			<input type="file" name="Product_image"  class="form-control my-3" />

			@Html.Partial("CategoryDropdown", ViewData["category"])
			<input type="submit" value="Add Product" class="form-control my-3 btn btn-primary" placeholder="Enter Product Name." />
		</form>
	</div>
	<div class="col-md-2"></div>
</div>